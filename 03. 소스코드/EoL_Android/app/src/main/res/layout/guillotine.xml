<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <LinearLayout
            android:id="@+id/settop_group"
            style="@style/LinearLayout.GuillotineItem"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/settop"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp" />

            <com.example.csp.myapplication.CanaroTextView
                style="@style/TextView.GuillotineItem.Selected"
                android:text="@string/settop"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Mulit_group"
            style="@style/LinearLayout.GuillotineItem"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/plug"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp" />

            <com.example.csp.myapplication.CanaroTextView
                style="@style/TextView.GuillotineItem.Selected"
                android:text="@string/multi" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <LinearLayout
            android:id="@+id/TV_group"
            style="@style/LinearLayout.GuillotineItem"
            android:clickable="true"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="0dp">


            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/tv"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp" />

            <com.example.csp.myapplication.CanaroTextView
                style="@style/TextView.GuillotineItem.Selected"
                android:text="@string/tv"
                android:layout_gravity="left|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AIR_group"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/air"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp" />

            <com.example.csp.myapplication.CanaroTextView
                style="@style/TextView.GuillotineItem.Selected"
                android:text="@string/aircon"
                android:layout_gravity="left|center_horizontal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <LinearLayout
            android:id="@+id/settings_group"
            style="@style/LinearLayout.GuillotineItem"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/setting"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp" />

            <com.example.csp.myapplication.CanaroTextView
                style="@style/TextView.GuillotineItem.Selected"
                android:text="@string/setting" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sensor_group"
            style="@style/LinearLayout.GuillotineItem"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/sensor"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp" />

            <com.example.csp.myapplication.CanaroTextView
                style="@style/TextView.GuillotineItem.Selected"
                android:text="@string/sensor" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>