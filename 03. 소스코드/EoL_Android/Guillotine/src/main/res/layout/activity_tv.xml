<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        style="@style/Toolbar"
        android:layout_height="55dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="티비"
            android:textSize="@dimen/guillotine_item_text_size" />
        />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="197dp"
        android:layout_height="387dp"
        android:layout_gravity="left|center_vertical|bottom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소리"
            android:id="@+id/textView20"
            android:textSize="35dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <ImageButton
            android:id="@+id/soundup"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/soundup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/sounddown"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/sounddown"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="197dp"
        android:layout_height="387dp"
        android:layout_gravity="center_vertical|bottom|right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채널"
            android:textSize="35dp"
            android:textColor="#000000"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <ImageButton
            android:id="@+id/channelup"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/channelup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/channeldown"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/channeldown"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <ToggleButton
                android:id="@+id/soundonoff"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/soundoff"
                android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <ToggleButton
                android:id="@+id/tvbtn"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/poweroff"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginLeft="15dp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>